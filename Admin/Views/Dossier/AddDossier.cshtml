            }
        });

        document.getElementById('customSwitchsizelg').addEventListener('change', function () {
            var nombreFieldContainer = document.getElementById('nombreFieldContainer');
            var ageFieldContainer = document.getElementById('ageFieldContainer');

            if (this.checked) {
                nombreFieldContainer.style.display = 'block';
                ageFieldContainer.style.display = 'block';
            } else {
                nombreFieldContainer.style.display = 'none';
                ageFieldContainer.style.display = 'none';
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            var radios = document.querySelectorAll('input[name="sn"]');
            var fp = document.getElementById('fpFieldContainer');

            radios.forEach(function (radio) {
                radio.addEventListener('change', function () {
                    if (document.getElementById('formationProfessionnelle').checked) {
                        fp.style.display = 'block';
                    } else {
                        fp.style.display = 'none';
                    }
                });
            });

            // Initial check in case the radio button is already checked when the page loads
            if (document.getElementById('formationProfessionnelle').checked) {
                fp.style.display = 'block';
