            var nameFieldContainer = document.getElementById('nameFieldContainer');
            var linkFieldContainer = document.getElementById('linkFieldContainer');
            var contactFieldContainer = document.getElementById('contactFieldContainer');

            if (this.checked) {
                nameFieldContainer.style.display = 'block';
