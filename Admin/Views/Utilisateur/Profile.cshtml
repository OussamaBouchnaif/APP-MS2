@model Admin.ViewModel.UtilisateurVM
@{
    ViewData["Title"] = "Profil Utilisateur";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xxl-3">
                <div class="card">
                    <div class="card-body p-0">
                        <div class="user-profile-img">
                            <img src="~/assets/images/bg-1.png"
                                 class="profile-img profile-foreground-img rounded-top" style="height: 120px;"
                                 alt="">
                            <div class="overlay-content rounded-top">
                                <div>
                                    <div class="user-nav p-3">
                                        <div class="d-flex justify-content-end">
                                            <div class="dropdown">
                                                <a class="text-muted dropdown-toggle font-size-16" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true">
                                                    <i class="bx bx-dots-vertical text-white font-size-20"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a class="dropdown-item" href="#" id="viewButton">Voir</a>
                                                    <a class="dropdown-item" href="#" id="editButton">Éditer</a>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end user-profile-img -->

                        <div class="p-4 pt-0">
                            <div class="mt-n5 position-relative text-center border-bottom pb-3">
                                @if (@Model.Sexe == "Homme")
                                {
                                    <img class="rounded-circle header-profile-user" src="~/assets/images/users/profile_homme.png" alt="Avatar d'en-tête">
                                }
                                else
                                {
                                    <img class="rounded-circle header-profile-user" src="~/assets/images/users/profile_femme.png" alt="Avatar d'en-tête">
                               }
                            </div>

                            <div class="table-responsive mt-3 border-bottom pb-3">
                                <table class="table align-middle table-sm table-nowrap table-borderless table-centered mb-0">
                                    <tbody>
                                        <tr>
                                            <th class="fw-bold">Age :</th>
                                            <td class="text-muted">@Model.Age</td>
                                        </tr>
                                        <tr>
                                            <th class="fw-bold">Sexe :</th>
                                            <td class="text-muted">@Model.Sexe</td>
                                        </tr>
                                        <tr>
                                            <th class="fw-bold">Téléphone :</th>
                                            <td class="text-muted">@Model.Tele</td>
                                        </tr>
                                        <tr>
                                            <th class="fw-bold">Email :</th>
                                            <td class="text-muted">@Model.Email</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="pt-2 text-center border-bottom pb-4">
                                <a href="#" class="btn btn-primary waves-effect waves-light btn-sm">Send Message <i class="bx bx-send ms-1 align-middle"></i></a>
                            </div>

                            <div class="mt-3 pt-1 text-center">
                                <ul class="list-inline mb-0">
                                    <li class="list-inline-item">
                                        <a href="javascript:void()" class="social-list-item bg-primary text-white border-primary">
                                            <i class="bx bxl-facebook"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="javascript:void()" class="social-list-item bg-info text-white border-info">
                                            <i class="bx bxl-linkedin"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="javascript:void()" class="social-list-item bg-danger text-white border-danger">
                                            <i class="bx bxl-google"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xxl-9">
                <!-- Tab content -->
                <div class="tab-content">
                    <div class="tab-pane active" id="overview" role="tabpanel">
                        <div class="card">
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title">Formulaire de Modification D'Utilisateur</h4>
                                            <p class="card-title-desc">Veuillez remplir les informations ci-dessous.</p>
                                        </div>
                                        <div class="card-body">
                                            @if (Model.Role == "Admin")
                                            {
                                                <p>Vous n'avez pas la permission de modifier ce profil.</p>
                                            }
                                            else
                                            {
                                                <form id="profileForm" asp-action="Profile" method="post" novalidate>
                                                    <div class="form-group">
                                                        <input asp-for="Id" class="form-control" type="hidden" />
                                                    </div>
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                                    <div class="mb-3 row">
                                                        <label for="Nom" class="col-md-2 col-form-label">Nom <span class="text-danger">*</span></label>
                                                        <div class="col-md-10">
                                                            <input asp-for="Nom" class="form-control" id="Nom" placeholder="Entrez le nom" data-value="@Model.Nom" required readonly />
                                                            <span asp-validation-for="Nom" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 row">
                                                        <label for="Prenom" class="col-md-2 col-form-label">Prénom <span class="text-danger">*</span></label>
                                                        <div class="col-md-10">
                                                            <input asp-for="Prenom" class="form-control" id="Prenom" placeholder="Entrez le prénom" data-value="@Model.Prenom" required readonly />
                                                            <span asp-validation-for="Prenom" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 row">
                                                        <label for="Age" class="col-md-2 col-form-label">Age <span class="text-danger">*</span></label>
                                                        <div class="col-md-10">
                                                            <input asp-for="Age" class="form-control" id="Age" type="number" placeholder="Entrez l'âge" data-value="@Model.Age" required readonly />
                                                            <span asp-validation-for="Age" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 row">
                                                        <label for="Sexe" class="col-md-2 col-form-label">Sexe <span class="text-danger">*</span></label>
                                                        <div class="col-md-10">
                                                            <select asp-for="Sexe" class="form-control" id="Sexe" asp-items="ViewBag.Sexes" required data-value="@Model.Sexe" disabled>
                                                                <option value="" disabled selected>Choisissez le sexe</option>
                                                            </select>
                                                            <span asp-validation-for="Sexe" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 row">
                                                        <label for="Tele" class="col-md-2 col-form-label">Téléphone <span class="text-danger">*</span></label>
                                                        <div class="col-md-10">
                                                            <input asp-for="Tele" class="form-control" id="Tele" type="tel" placeholder="Entrez le numéro de téléphone" required data-value="@Model.Tele" readonly />
                                                            <span asp-validation-for="Tele" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 row">
                                                        <label for="Role" class="col-md-2 col-form-label">Rôle <span class="text-danger">*</span></label>
                                                        <div class="col-md-10">
                                                            <select asp-for="Role" class="form-control" id="Role" asp-items="ViewBag.Roles" required data-value="@Model.Role" disabled>
                                                                <option value="" disabled selected>Choisissez le rôle</option>
                                                            </select>
                                                            <span asp-validation-for="Role" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 row">
                                                        <label for="Email" class="col-md-2 col-form-label">Email <span class="text-danger">*</span></label>
                                                        <div class="col-md-10">
                                                            <input asp-for="Email" class="form-control" id="Email" type="email" placeholder="Entrez l'email" required data-value="@Model.Email" readonly />
                                                            <span asp-validation-for="Email" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 row">
                                                        <label for="MotDePasse" class="col-md-2 col-form-label">Mot de Passe</label>
                                                        <div class="col-md-10">
                                                            <div class="input-group">
                                                                <input asp-for="MotDePasse" class="form-control" id="MotDePasse" type="password" placeholder="Entrez le mot de passe" readonly />
                                                                <button class="btn btn-outline-secondary" type="button" id="togglePassword"><i class="fa fa-eye" id="togglePasswordIcon"></i></button>
                                                            </div>
                                                            <span asp-validation-for="MotDePasse" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 row">
                                                        <div class="col-md-10 offset-md-2">
                                                      @*       <button type="button" class="btn btn-primary" id="viewButton">Afficher</button>
                                                            <button type="button" class="btn btn-primary" id="editButton">Modifier</button> *@
                                                            <button type="submit" class="btn btn-primary" id="submitButton">Soumettre</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Toggle password visibility
            $('#togglePassword').on('click', function () {
                var passwordField = $('#MotDePasse');
                var passwordFieldType = passwordField.attr('type');
                var toggleIcon = $('#togglePasswordIcon');

                if (passwordFieldType === 'password') {
                    passwordField.attr('type', 'text');
                    toggleIcon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    toggleIcon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Handle form submission via AJAX
            $('form').on('submit', function (e) {
                e.preventDefault();

                var form = $(this);
                $.ajax({
                    url: '@Url.Action("UpdateAjax", "Utilisateur")',
                    type: 'POST',
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                title: 'Succès!',
                                text: response.message,
                                icon: 'success',
                                confirmButtonText: 'OK'
                            }).then(() => {
                                window.location.href = '@Url.Action("Index", "Utilisateur")';
                            });
                        } else {
                            Swal.fire({
                                title: 'Erreur!',
                                text: response.message,
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            title: 'Erreur!',
                            text: 'Une erreur s\'est produite.',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });

            // Initialize
            const viewButton = document.getElementById('viewButton');
            const editButton = document.getElementById('editButton');
            const profileForm = document.getElementById('profileForm');
            const inputs = profileForm.querySelectorAll('input, select');
            const submitButton = document.getElementById('submitButton');

            // Initially hide the inputs and clear values
            inputs.forEach(input => {
                input.setAttribute('readonly', true);
                input.setAttribute('disabled', true);
                // Clear values initially for display
                if (input.hasAttribute('data-value')) {
                    input.value = ''; 
                }
            });
            submitButton.style.display = 'none';

            // Display data in inputs when 'Afficher' is clicked
            viewButton.addEventListener('click', function (event) {
                event.preventDefault();
                inputs.forEach(input => {
                    if (input.type !== 'hidden') {
                        input.setAttribute('readonly', true);
                        input.setAttribute('disabled', true);
                        if (input.hasAttribute('data-value')) {
                            input.value = input.getAttribute('data-value');
                        }
                    }
                });
                submitButton.style.display = 'none';
            });

            // Enable editing when 'Modifier' is clicked
            editButton.addEventListener('click', function (event) {
                event.preventDefault();
                inputs.forEach(input => {
                    input.removeAttribute('readonly');
                    input.removeAttribute('disabled');
                });
                submitButton.style.display = 'block';
            });

            // Toggle password visibility
            const togglePassword = document.getElementById('togglePassword');
            const togglePasswordIcon = document.getElementById('togglePasswordIcon');

            if (togglePassword) {
                togglePassword.addEventListener('click', function () {
                    const passwordField = document.getElementById('MotDePasse');
                    const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordField.setAttribute('type', type);
                    togglePasswordIcon.classList.toggle('fa-eye');
                    togglePasswordIcon.classList.toggle('fa-eye-slash');
                });
            }
        });
    </script>
}
